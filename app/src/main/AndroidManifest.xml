<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.starwars">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_persona"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_persona"
        android:supportsRtl="true"
        android:theme="@style/Theme.StarWars"
        android:usesCleartextTraffic="true">
        <activity android:name=".presentation.view.Detalhes"></activity>
        <activity android:name=".presentation.view.Inicio" />
        <activity android:name=".presentation.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>