<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Base application theme. -->
    <style name="Theme.WikiStarWars" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorOnBackground">@color/gray</item>
        <item name="backgroundColor">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowDisablePreview">true</item>
    </style>


    <style name="Theme.WikiStarWars.Yellow" parent="Theme.WikiStarWars">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.WikiStarWars.Blue" parent="Theme.WikiStarWars">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.WikiStarWars.Red" parent="Theme.WikiStarWars">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/black_0.5</item>
    </style>

</resources>