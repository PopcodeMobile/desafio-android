<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sw_info"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/sw_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Darth Vader" />

    <TextView
        android:id="@+id/sw_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sw_name"
        tools:text="Altura:" />

    <TextView
        android:id="@+id/sw_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/sw_height"
        app:layout_constraintTop_toBottomOf="@id/sw_height"
        tools:text="Gênero:" />

    <TextView
        android:id="@+id/sw_mass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/sw_height"
        app:layout_constraintTop_toBottomOf="@id/sw_gender"
        tools:text="Peso:" />

    <TextView
        android:id="@+id/sw_hair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/sw_height"
        app:layout_constraintTop_toBottomOf="@id/sw_mass"
        tools:text="Cor do Cabelo:" />

    <TextView
        android:id="@+id/sw_skin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/sw_height"
        app:layout_constraintTop_toBottomOf="@id/sw_hair"
        tools:text="Cor da Pele:" />

    <TextView
        android:id="@+id/sw_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/sw_height"
        app:layout_constraintTop_toBottomOf="@id/sw_skin"
        tools:text="Cor do Olho:" />

    <TextView
        android:id="@+id/sw_bday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/sw_height"
        app:layout_constraintTop_toBottomOf="@id/sw_eye"
        tools:text="Ano de Nascimento:" />

    <TextView
        android:id="@+id/sw_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/sw_height"
        app:layout_constraintTop_toBottomOf="@id/sw_bday"
        tools:text="Planeta Natal:" />

    <TextView
        android:id="@+id/sw_specie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/sw_height"
        app:layout_constraintTop_toBottomOf="@id/sw_home"
        tools:text="Espécie:" />

    <ImageView
        android:id="@+id/sw_favorite"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/sw_specie"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/sw_height"
        app:srcCompat="@drawable/ic_sithjedi"
        app:tint="#616161" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:alpha="0.8"
        app:srcCompat="@drawable/ic__47674" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sw_specie"
        android:alpha="0.35"
        app:tint="#FF0000"
        app:srcCompat="@drawable/ic__64516" />


</androidx.constraintlayout.widget.ConstraintLayout>