<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MovieDetailActivity"
        android:id="@+id/scr_moveiDetail">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.github.florent37.shapeofview.shapes.ArcView
                android:background="@drawable/background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/arcView"
                android:elevation="4dp"
                app:shape_arc_height="10dp"
                app:shape_arc_position="bottom">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@drawable/background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/mgv_posterfilm"
                        android:src="@drawable/filme1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>


                <ImageView
                        android:visibility="visible"
                        app:layout_constraintHorizontal_weight="1"
                        android:src="@drawable/ic_back"
                        android:layout_width="68dp"
                        android:id="@+id/backButton"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_height="68dp"
                        android:padding="24dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.github.florent37.shapeofview.shapes.ArcView>

        <TextView
                android:text="Episode ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/episodeId"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/openingCrawl"
                android:layout_marginLeft="16dp" />
        <TextView
                android:text="@string/description_resume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/openingCrawl"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="26dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewOpeningCrawl"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
                android:text="@string/director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_namedirector" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/episodeId" android:textColor="@color/white"
                android:layout_marginTop="16dp" android:textSize="12sp"
            android:layout_marginLeft="16dp" />
        <TextView
                android:text="@string/producer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewProducer" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_namedirector" android:textColor="@color/white"
                android:layout_marginTop="16dp" android:textSize="12sp"
            android:layout_marginLeft="16dp" />
        <TextView
                android:text="@string/release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/releaseDate" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewProducer" android:textColor="@color/white"
                android:layout_marginTop="16dp" android:textSize="12sp"
            android:layout_marginLeft="16dp" />
        <Button
                android:text="@string/species_movie"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:fontFamily="@font/stjldbl2"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
            android:paddingTop="6dp"
                android:background="@drawable/button_transparent"
                android:id="@+id/buttonSpecies"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/buttonCharacters"
            android:layout_marginRight="16dp" />
        <Button
                android:text="@string/starship_movie"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:paddingTop="6dp"
            android:textColor="@color/white"
            android:fontFamily="@font/stjldbl2"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:background="@drawable/button_transparent"
                android:id="@+id/buttonStarships" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/buttonSpecies"
            android:layout_marginLeft="8dp" />
        <Button
                android:text="@string/vehicle_movie"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:fontFamily="@font/stjldbl2"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
               android:paddingTop="6dp"
                android:background="@drawable/button_transparent"
                android:id="@+id/buttonVehicles"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonSpecies"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="16dp" />
        <Button
                android:text="@string/character_movie"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:fontFamily="@font/stjldbl2"
            android:paddingTop="6dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:background="@drawable/button_transparent"
                android:id="@+id/buttonCharacters"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/releaseDate"
            android:layout_marginLeft="8dp" />
        <Button
                android:text="@string/planet_movie"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:fontFamily="@font/stjldbl2"
                android:paddingEnd="8dp"
            android:paddingTop="6dp"
                android:paddingStart="8dp"
                android:background="@drawable/button_transparent"
                android:id="@+id/buttonPlanets"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonVehicles" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="@string/name_filme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/stjldbl1"
                android:id="@+id/textViewOpeningCrawl"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/arcView"
                android:layout_marginTop="16dp" android:textSize="20sp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>