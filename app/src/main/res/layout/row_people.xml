<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/rowPeople"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nomePersonagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Nome Personagem" />

            <TextView
                android:id="@+id/alturaPersonagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="@+id/nomePersonagem"
                app:layout_constraintStart_toStartOf="@+id/nomePersonagem"
                app:layout_constraintTop_toBottomOf="@+id/nomePersonagem"
                tools:text="Altura" />

            <TextView
                android:id="@+id/generoPersonagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="@+id/nomePersonagem"
                app:layout_constraintStart_toStartOf="@+id/nomePersonagem"
                app:layout_constraintTop_toBottomOf="@+id/alturaPersonagem"
                tools:text="Genero" />

            <TextView
                android:id="@+id/pesoPersonagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/nomePersonagem"
                app:layout_constraintStart_toStartOf="@+id/nomePersonagem"
                app:layout_constraintTop_toBottomOf="@+id/generoPersonagem"
                app:layout_constraintVertical_bias="0.0"
                tools:text="Peso" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
